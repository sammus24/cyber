<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CTF Scoreboard</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div id="scoreboard">
        <h1>Scoreboard</h1>
        <table>
            <thead>
                <tr>
                    <th>Team</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody id="scoreboard-body">
                <!-- Scores will be dynamically injected -->
            </tbody>
        </table>
    </div>

    <script>
        async function fetchScoreboard() {
            const res = await fetch('http://localhost:5000/scoreboard');
            const data = await res.json();
            const tbody = document.getElementById('scoreboard-body');
            tbody.innerHTML = data.map(team => `
                <tr>
                    <td>${team.name}</td>
                    <td>${team.score}</td>
                </tr>
            `).join('');
        }
        fetchScoreboard();
    </script>
</body>
</html>
